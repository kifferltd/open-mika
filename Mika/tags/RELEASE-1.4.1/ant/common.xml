<project name="mika-common" default="fail" basedir=".">
  <property name="top.level.dir" value="../" />
  <property name="build.dir" value="${top.level.dir}build/common/"/>
  <property name="common.class.dir" value="${build.dir}class/"/>

  <target name="compile-wre">
     <mkdir dir="${common.class.dir}" />
     <property name="top.level.dir" value="${basedir}/.." />
     <property name="vm.cmp.dir" value="${top.level.dir}/vm-cmp/"/>
     <property name="math.dir" value="${vm.cmp.dir}math/java/java"/>
     <property name="awt.dir" value="${vm.cmp.dir}awt/rudolph/java"/>
     <property name="vm.java.dir" value="${top.level.dir}/core-vm/java"/>
     <property name="security.dir" value="${vm.cmp.dir}security/none/java/"/>
     <property name="jar.dirs" value="${vm.cmp.dir}jar/none/"/>
     <property name="micro.io.dir" value="${top.level.dir}/extension/microedition/io/"/>

     <javac compiler="jikes" destdir="${common.class.dir}" bootclasspath="${empty.dir}"
            target="1.3" debug="true" nowarn="true" failonerror="true"
            srcdir="${vm.java.dir}:${security.dir}:${jar.dirs}:${math.dir}:${awt.dir}:${micro.io.dir}"/>
  </target>

  <target name="clean">
    <delete dir="${build.dir}"/>
  </target>

  <target name="fail">
    <fail message="please provide a target when using this xml file"/>
  </target>
</project>
